#menu-sidebar-nav
	> li > a
		padding .5rem 1rem .65rem
		line-height 1
		display block
		border-radius .5rem
		transition .3s all ease
		&:hover
			background #edf2f7

	> li.current-menu-item
		> a
			background #edf2f7
			font-weight 700
			color terminal

// aside
aside
	&.is-active
		.burger-menu
			.bar:first-child
				transform translateY(0) translateX(-4px) rotate(-45deg)
			.bar:nth-child(2)
				transform translateX(-10px)
				opacity 0
			.bar:last-child
				transform translateY(0) translateX(-4px) rotate(45deg)
		.aside-bottom
			display block

// header
header
	transition .3s all ease
	background transparent

	// states
	&.has-bg
		backdrop-filter saturate(180%) blur(10px)
		background-color rgba(66, 86, 162, .5)

	&:not(.has-bg).is-scrolled
		backdrop-filter saturate(180%) blur(10px)
		background-color rgba(66, 86, 162, .85)

	#menu-header
		.current-menu-item
			> a
				color nucleus
	
	ul
		a:not(.button)
			transition .3s all ease
			&:hover
				color nucleus



/** burger menu **/
.burger-menu
	width 23px
	height 18px
	cursor pointer
	position relative
	.bar
		width 100%
		height 2px
		position absolute
		transition 0.3s all ease
		background terminal
		&:first-child
			transform-origin right top
			top 0
		&:nth-child(2)
			top 50%
			margin-top -1px
		&:last-child
			transform-origin right bottom
			bottom 0

/** burger menu active **/
burgerMenuActive()
	.bar:first-child
		transform translateY(0) translateX(-4px) rotate(-45deg)
	.bar:nth-child(2)
		transform translateX(-10px)
		opacity 0
	.bar:last-child
		transform translateY(0) translateX(-4px) rotate(45deg)
