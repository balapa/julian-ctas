html
	font-size 16px

body
	color terminal
	background linear-gradient(to bottom, nodal, nucleus)
	background-attachment fixed
	&:before
		// content ''
		position fixed
		top 16rem
		height 1px
		left 0
		width 100%
		background nucleus
		z-index 2

p
	a
		text-decoration underline

.mobile-padding
	+below(md)
		padding-left mobilePadding
		padding-right mobilePadding

containerGap = 6.5vw
.container
	+above(md)
		margin-left containerGap
		margin-right containerGap
	+below(md)
		padding-left mobilePadding
		padding-right mobilePadding

.main-flex
	#content
		background-attachment fixed

	+above(md)
		aside
			min-width navWidth[0]
			.nav-inner
				width navWidth[0]
				box-sizing border-box

	+between(768px, 950px, true)
		aside
			min-width navWidth[1]
			.nav-inner
				width navWidth[1]

section
	.section-label
		font-size 0.875rem
		letter-spacing 2px
		line-height 2.35
		text-transform uppercase
	.section-title
		position relative
		top -2px
		line-height 1.35
		font-size 1.875rem
		font-family fontDisplay

.bg-nodal + footer
	background nodal

.footer-absolute + footer
	position absolute




// button
.button
	letter-spacing 1px
	padding 9px 20px
	transition .3s all ease
	text-transform uppercase
	border-radius 50px
	font-size .75rem
	line-height 1
	transition .3s all ease
	align-items center
	display inline-flex

	&.is-ghost
		border-width 1px
		border-style solid

	&.is-lg
		padding 14px 30px
		font-size 1rem
		font-weight 400

	&.border-white
		&:hover
			background white

	&.border-terminal
		&:hover
			background terminal
			color white



// carousel
.carousel
	.flickity-page-dots
		order -1
		position relative
		bottom unset



// h screen
.h-screen-header
	+above(md)
		min-height calc(100vh - 5rem)

.bg-blend
	background-position center center
	background-size cover
	position relative
	background-color nodal
	background-blend-mode multiply
